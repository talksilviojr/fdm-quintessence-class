@@ -3000,6 +3036,50 @@ int background_derivs(
   double a = pvecback[pba->index_bg_a];
   double H = pvecback[pba->index_bg_H];
 
+  /* Quintessence */
+  if (pba->has_quintessence == _TRUE_) {
+    double phi = pvecback[pba->index_bg_phi];
+    double phi_prime = pvecback[pba->index_bg_phi_prime];
+    double V = pba->M_quint*pba->M_quint*pba->M_quint*pba->M_quint * (1.0 + cos(phi / pba->f_quint));
+    double dV_dphi = -pba->M_quint*pba->M_quint*pba->M_quint*pba->M_quint / pba->f_quint * sin(phi / pba->f_quint);
+
+    dy[pba->index_bg_phi] = phi_prime;
+    dy[pba->index_bg_phi_prime] = -3.0 * H * phi_prime - dV_dphi;
+
+    double rho_quint = 0.5 * phi_prime*phi_prime + V;
+    double p_quint = 0.5 * phi_prime*phi_prime - V;
+
+    pvecback[pba->index_bg_rho_quint] = rho_quint;
+    pvecback[pba->index_bg_p_quint] = p_quint;
+  }
+
+  /* FDM */
+  if (pba->has_fdm == _TRUE_) {
+    double psi = pvecback[pba->index_bg_psi];
+    double psi_prime = pvecback[pba->index_bg_psi_prime];
+    double m2_a2 = a*a * pba->m_Psi*pba->m_Psi;
+
+    dy[pba->index_bg_psi] = psi_prime;
+    dy[pba->index_bg_psi_prime] = -3.0 * H * psi_prime - m2_a2 * psi;
+
+    double rho_fdm = 0.5 * psi_prime*psi_prime + 0.5 * m2_a2 * psi*psi;
+    double p_fdm = 0.5 * psi_prime*psi_prime - 0.5 * m2_a2 * psi*psi;
+
+    pvecback[pba->index_bg_rho_fdm] = rho_fdm;
+    pvecback[pba->index_bg_p_fdm] = p_fdm;
+  }
+
   return _SUCCESS_;
 }
