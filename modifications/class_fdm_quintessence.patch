+/** Helper: add scalar field (Psi or phi) to perturbation vector */
+int perturbations_add_scalar_field(
+    struct precision *ppr,
+    struct background *pba,
+    struct perturbations *ppt,
+    int *index_pt,
+    const char *name)
+{
+  if (strcmp(name, "Psi") == 0) {
+    ppt->index_pt_delta_Psi = (*index_pt)++;
+    ppt->index_pt_theta_Psi = (*index_pt)++;
+  }
+  else if (strcmp(name, "phi") == 0) {
+    ppt->index_pt_delta_phi = (*index_pt)++;
+    ppt->index_pt_theta_phi = (*index_pt)++;
+    ppt->index_pt_phi       = (*index_pt)++;  // Background field value
+  }
+  return _SUCCESS_;
+}
