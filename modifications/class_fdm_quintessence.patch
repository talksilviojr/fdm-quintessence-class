@@ -1200,6 +1202,52 @@
 int background_init(
   int index_bg = pba->bg_size;
 
+  /* === FDM and Quintessence extensions === */
+
+  /* --- Fuzzy Dark Matter --- */
+  if (pba->has_fdm == _TRUE_) {
+    pba->index_bg_psi = index_bg++;
+    pba->index_bg_psi_prime = index_bg++;
+    pba->index_bg_rho_fdm = index_bg++;
+    pba->index_bg_p_fdm = index_bg++;
+  }
+
+  /* --- Quintessence --- */
+  if (pba->has_quintessence == _TRUE_) {
+    pba->index_bg_phi = index_bg++;
+    pba->index_bg_phi_prime = index_bg++;
+    pba->index_bg_rho_quint = index_bg++;
+    pba->index_bg_p_quint = index_bg++;
+
+    /* Allocate evolution tables */
+    class_alloc(pba->phi_table, pba->bt_size * sizeof(double), pba->error_message);
+    class_alloc(pba->phi_prime_table, pba->bt_size * sizeof(double), pba->error_message);
+  }
+
+  pba->bg_size = index_bg;
+
   return _SUCCESS_;
 }
 
@@ -3000,6 +3050,47 @@
 int background_derivs(
   double a = pvecback[pba->index_bg_a];
   double H = pvecback[pba->index_bg_H];
+  double a_prime_over_a = a * H;
+
+  /* --- Quintessence dynamics --- */
+  if (pba->has_quintessence == _TRUE_) {
+    double phi        = pvecback[pba->index_bg_phi];
+    double phi_prime  = pvecback[pba->index_bg_phi_prime];
+
+    /* Potential: V(phi) = M^4 * (1 + cos(phi / f)) */
+    double M4 = pba->M_quint * pba->M_quint * pba->M_quint * pba->M_quint;
+    double V = M4 * (1.0 + cos(phi / pba->f_quint));
+    double dV_dphi = - M4 / pba->f_quint * sin(phi / pba->f_quint);
+
+    /* Klein-Gordon equation in conformal time: phi'' + 2(a'/a)phi' + a^2 dV/dphi = 0 */
+    dy[pba->index_bg_phi]        = phi_prime;
+    dy[pba->index_bg_phi_prime]  = -2.0 * a_prime_over_a * phi_prime - a * a * dV_dphi;
+
+    /* Energy density and pressure. These should be added to the total rho 
+       and p used in the Friedmann equations elsewhere in this function. */
+    double rho_quint = 0.5 * (phi_prime / a) * (phi_prime / a) + V;
+    double p_quint   = 0.5 * (phi_prime / a) * (phi_prime / a) - V;
+  }
+
+  /* --- Fuzzy Dark Matter dynamics --- */
+  if (pba->has_fdm == _TRUE_) {
+    double psi       = pvecback[pba->index_bg_psi];
+    double psi_prime = pvecback[pba->index_bg_psi_prime];
+    double m_psi_sq  = pba->m_Psi * pba->m_Psi;
+
+    /* Potential V(psi) = 0.5 * m^2 * psi^2 */
+    double V_fdm = 0.5 * m_psi_sq * psi * psi;
+
+    /* Klein-Gordon equation: psi'' + 2(a'/a)psi' + a^2 * m^2 * psi = 0 */
+    dy[pba->index_bg_psi]        = psi_prime;
+    dy[pba->index_bg_psi_prime]  = -2.0 * a_prime_over_a * psi_prime - a * a * m_psi_sq * psi;
+
+    /* Energy density and pressure. These should be added to the total rho 
+       and p used in the Friedmann equations elsewhere in this function. */
+    double rho_fdm = 0.5 * (psi_prime / a) * (psi_prime / a) + V_fdm;
+    double p_fdm   = 0.5 * (psi_prime / a) * (psi_prime / a) - V_fdm;
+  }
 
   return _SUCCESS_;
 }
