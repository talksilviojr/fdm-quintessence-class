@@ -1200,6 +1202,48 @@ int perturbations_init(
   int index_pt = ppt->pt_size;
 
+  /* FDM + Quintessence - Silvio A. CorrÃªa Junior */
+  if (ppt->has_fdm == _TRUE_) {
+    class_call(perturbations_add_scalar_field(ppr, pba, ppt, &index_pt, "Psi"),
+               ppt->error_message, ppt->error_message);
+  }
+  if (ppt->has_quintessence == _TRUE_) {
+    class_call(perturbations_add_scalar_field(ppr, pba, ppt, &index_pt, "phi"),
+               ppt->error_message, ppt->error_message);
+  }
+  ppt->pt_size = index_pt;
+
   return _SUCCESS_;
 }
 
+int perturbations_add_scalar_field(
+    struct precision *ppr, struct background *pba, struct perturbations *ppt,
+    int *index_pt, const char *name)
+{
+  if (strcmp(name, "Psi") == 0) {
+    ppt->index_pt_delta_Psi = (*index_pt)++;
+    ppt->index_pt_theta_Psi = (*index_pt)++;
+  }
+  else if (strcmp(name, "phi") == 0) {
+    ppt->index_pt_delta_phi = (*index_pt)++;
+    ppt->index_pt_theta_phi = (*index_pt)++;
+    ppt->index_pt_phi       = (*index_pt)++;
+  }
+  return _SUCCESS_;
+}
 
@@ -5600,6 +5642,50 @@ int perturbations_derivs(
   double k = ppt->k[ppt->index_k];
 
+  /* FDM + Quintessence */
+  if (ppt->has_fdm == _TRUE_) {
+    double m2_a2 = pba->a_today * pba->a_today * ppt->m_Psi * ppt->m_Psi;
+
+    dy[ppt->index_pt_delta_Psi] = -y[ppt->index_pt_theta_Psi]
+                                + 0.5 * y[ppt->index_pt_h_prime] * y[ppt->index_pt_delta_Psi];
+
+    dy[ppt->index_pt_theta_Psi] = -(pba->H0 * pba->a_today / pba->a) * y[ppt->index_pt_theta_Psi]
+                                + k*k * y[ppt->index_pt_delta_Psi]
+                                - m2_a2 * y[ppt->index_pt_delta_Psi];
+  }
+
+  if (ppt->has_quintessence == _TRUE_) {
+    double Vpp = -pow(ppt->M_quint, 4) / pow(ppt->f_quint, 2) * cos(y[ppt->index_pt_phi] / ppt->f_quint);
+    double m2_eff = pba->a_today * pba->a_today * Vpp;
+
+    dy[ppt->index_pt_delta_phi] = -y[ppt->index_pt_theta_phi]
+                                + 0.5 * y[ppt->index_pt_h_prime] * y[ppt->index_pt_delta_phi];
+
+    dy[ppt->index_pt_theta_phi] = -(pba->H0 * pba->a_today / pba->a) * y[ppt->index_pt_theta_phi]
+                                + k*k * y[ppt->index_pt_delta_phi]
+                                - m2_eff * y[ppt->index_pt_delta_phi];
+  }
+
   return _SUCCESS_;
 }
